
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>OmniMUD</title>
    <link rel="stylesheet" href="/css/OmniMud.css" asp-append-version="true">
    <script src="/lib/microsoft/signalr/dist/browser/signalr.min.js" asp-append-version="true"></script>
    <script src="/scripts/OmniMud.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        <div class="container">
            <div class="header-wrap">
                <div class="logo">
                    <img src="/images/omnimud-icon.png" alt="" />
                    <span>OmniMUD</span>
                </div>
                <div class="user">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="user-name">@User.Identity.Name</span>
                        <span class="user-signout"><a asp-action="Logout" asp-controller="Auth">Logout</a></span>
                    }
                </div>
            </div>
        </div>
    </header>

    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>

    
</body>
</html>